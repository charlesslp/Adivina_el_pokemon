<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juego.charles.cuantos_puedes_pokeadivinar.AcercaDe"
    android:orientation="vertical"
    android:background="#ffe0d800"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Esta aplicación ha sido diseñada y desarrollada por Charles. Hecha por un fan para disfrute de otros fans."
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="23dp" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="247dp"
        android:id="@+id/imageView5"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/carlos4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aplicacion ofrecida por:"
        android:id="@+id/textView5"
        android:layout_gravity="right"
        android:layout_below="@+id/imageView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView11"
        android:layout_gravity="right"
        android:background="@drawable/logo4"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />


</RelativeLayout>
