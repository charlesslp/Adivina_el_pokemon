<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juego.dskadmin.adivina_el_pokemon.Jugar"
    android:orientation="vertical"
    android:background="#ffff0e10"
    android:id="@+id/layoutDeJugar">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/layoutJugarHorizontal1"
        android:weightSum="1">

        <Button
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="ayuda"
            android:id="@+id/btnPista"
            android:background="@drawable/presion_boton" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="28dp"
            android:id="@+id/imageView6"
            android:background="@drawable/monedas"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView11"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:id="@+id/imgIntentos"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtMensaje"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/layoutJugarHorizontal1"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/txtMensaje"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="¿Cuál es este Pokemon?"
                        android:id="@+id/textView3"
                        android:layout_gravity="center_horizontal"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtMensaje"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="220dp"
                        android:id="@+id/imgPokemon"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@+id/textView3"
                        android:layout_centerHorizontal="true" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/imgPokemon"
                        android:layout_alignRight="@+id/layoutJugarHorizontal1"
                        android:layout_alignEnd="@+id/layoutJugarHorizontal1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol0"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="0" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol1"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="1" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol2"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="2" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol3"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="3" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol4"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="4" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol5"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="5" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol6"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="6" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol7"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="7" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol8"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="8" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol9"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="9" />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/boton_sol10"
                            android:background="@drawable/punto_blanco"
                            android:layout_row="0"
                            android:layout_column="10" />

                    </GridLayout>

                    <Button
                        android:layout_width="95dp"
                        android:layout_height="45dp"
                        android:text="Aceptar"
                        android:id="@+id/btnAceptar"
                        android:background="@drawable/presion_boton"
                        android:layout_below="@+id/imgPokemon"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/gridLayout"
                        android:layout_below="@+id/btnAceptar"
                        android:layout_alignLeft="@+id/imgPokemon"
                        android:layout_alignStart="@+id/imgPokemon"
                        android:layout_alignRight="@+id/imgPokemon"
                        android:layout_alignEnd="@+id/imgPokemon"
                        android:layout_gravity="center_horizontal">

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton00"
                            android:background="@drawable/punto"
                            android:layout_row="0"
                            android:layout_column="0" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton01"
                            android:background="@drawable/punto"
                            android:layout_row="0"
                            android:layout_column="1" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton02"
                            android:background="@drawable/punto"
                            android:layout_row="0"
                            android:layout_column="2" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton03"
                            android:background="@drawable/punto"
                            android:layout_row="0"
                            android:layout_column="3" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton04"
                            android:background="@drawable/punto"
                            android:layout_row="0"
                            android:layout_column="4" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton05"
                            android:background="@drawable/punto"
                            android:layout_row="1"
                            android:layout_column="0" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton10"
                            android:background="@drawable/punto"
                            android:layout_row="1"
                            android:layout_column="1" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton11"
                            android:background="@drawable/punto"
                            android:layout_row="1"
                            android:layout_column="2" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton12"
                            android:background="@drawable/punto"
                            android:layout_row="1"
                            android:layout_column="3" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton13"
                            android:background="@drawable/punto"
                            android:layout_row="1"
                            android:layout_column="4" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton14"
                            android:background="@drawable/punto"
                            android:layout_row="2"
                            android:layout_column="0" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton15"
                            android:background="@drawable/punto"
                            android:layout_row="2"
                            android:layout_column="1" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton20"
                            android:background="@drawable/punto"
                            android:layout_row="2"
                            android:layout_column="2" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton21"
                            android:background="@drawable/punto"
                            android:layout_row="2"
                            android:layout_column="3" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/boton22"
                            android:background="@drawable/punto"
                            android:layout_row="2"
                            android:layout_column="4" />

                    </GridLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>