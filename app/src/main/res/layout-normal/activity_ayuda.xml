<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juego.charles.cuantos_puedes_pokeadivinar.ayuda"
    android:background="#ffff0e10"
    android:id="@+id/RelLayoutAyuda">

    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:id="@+id/btnAyudaPista"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/presion_boton"
        android:text="pista"
        android:textSize="20dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="50dp"
        android:id="@+id/imageView10"
        android:background="@drawable/monedas"
        android:layout_alignBottom="@+id/btnAyudaPista"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_toLeftOf="@+id/imageView10"
        android:layout_toStartOf="@+id/imageView10"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:id="@+id/btnAyudaSol"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/presion_boton"
        android:text="solucion"
        android:textSize="20dp"
        android:layout_below="@+id/btnAyudaPista"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="50dp"
        android:id="@+id/imageView12"
        android:background="@drawable/monedas"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btnAyudaSol"
        android:layout_toLeftOf="@+id/imageView12"
        android:layout_toStartOf="@+id/imageView12"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:id="@+id/btnAyudaVideo"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/presion_boton"
        android:text="video"
        android:textSize="20dp"
        android:layout_below="@+id/btnAyudaSol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="50dp"
        android:id="@+id/imageView13"
        android:background="@drawable/monedas"
        android:layout_alignBottom="@+id/btnAyudaVideo"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gratis"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btnAyudaVideo"
        android:layout_toLeftOf="@+id/imageView13"
        android:layout_toStartOf="@+id/imageView13"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:id="@+id/btnAyudaPubli"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/presion_boton"
        android:text="Publicidad"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btnAyudaVideo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="50dp"
        android:id="@+id/imageView23"
        android:background="@drawable/monedas"
        android:layout_alignBottom="@+id/btnAyudaPubli"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gratis"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btnAyudaPubli"
        android:layout_toLeftOf="@+id/imageView23"
        android:layout_toStartOf="@+id/imageView23"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ahora mismo tienes:"
        android:id="@+id/textView15"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewmonedero"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView24"
        android:layout_toLeftOf="@+id/imageView24"
        android:layout_toStartOf="@+id/imageView24" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/imageView24"
        android:background="@drawable/monedas"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
