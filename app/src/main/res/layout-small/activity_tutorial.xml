<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juego.charles.cuantos_puedes_pokeadivinar.Tutorial"
    android:orientation="vertical"
    android:background="#ff006dff"
    android:id="@+id/GridDeTutorial"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="330dp"
            android:id="@+id/imageView22"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Anterior"
                android:id="@+id/button"
                android:layout_row="32"
                android:layout_column="0"
                android:background="@drawable/presion_boton" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Siguiente"
                android:id="@+id/button15"
                android:layout_row="32"
                android:layout_column="15"
                android:background="@drawable/presion_boton" />
        </GridLayout>

    </LinearLayout>
</LinearLayout>
